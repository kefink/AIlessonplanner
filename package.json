{
  "name": "ai-lesson-planner-junior-secondary",
  "private": true,
  "version": "1.0.0",
  "description": "AI Lesson Planner with Complete Kenya CBC Junior Secondary Curriculum",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup.js",
    "setup:qwen": "node scripts/setupQwenApi.js",
    "generate:batch": "node scripts/batchGenerate.js",
    "export:data": "node scripts/exportData.js",
    "import:curriculum": "node scripts/importCurriculum.js",
    "deploy": "npm run build && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod",
    "clean": "rimraf dist node_modules/.vite",
    "reinstall": "npm run clean && npm install",
    "automate": "node scripts/automate.js"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "docx": "^8.5.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.3",
    "jspdf": "^2.5.2",
    "lodash": "^4.17.21",
    "pdf-parse": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "typescript": "~5.7.2",
    "vercel": "^34.2.4",
    "vite": "^6.2.0",
    "vitest": "^1.6.0"
  }
}
